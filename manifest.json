{
    "manifest_version": 3,
    "name": "FACEIT Nickname Helper",
    "version": "1.2",
    "description": "Показывает дополнительную информацию об игроках на FACEIT из Google Документа.",
    "permissions": [
      "storage",
      "webNavigation"
    ],
    "host_permissions": [
      "https://docs.google.com/"
    ],
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://www.faceit.com/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_icon": "icon.png",
      "default_title": "Настройки FACEIT Helper",
      "default_popup": "options.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
